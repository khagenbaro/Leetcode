class Solution {
    public boolean isPowerOfTwo(int n) {
        boolean res = false;
        while(n>0){
            if(n==1){
                return true;
            }
            if(n%2==0){
                res = true;
                n = n/2;
            }
            else{
                res = false;
                break;
            }
        }
        return res;
    }
    
}
